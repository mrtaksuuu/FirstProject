
@{
    ViewData["Title"] = "Index";
}

@model IList<Ogrenci>


<a class="btn btn-success" asp-controller="Ogrenci" asp-action="Create">OğrenciEkle</a>

<table class="table">
    <thead>
        <tr>
            <td>Id</td>
            <td>OgrenciAdi</td>
            <td>OgrenciSoyadi</td>
            <td>OgrenciNo</td>
            <td>Sınıf</td>
            <td>  </td>


        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.OgrenciAdi</td>
                <td>@item.OgrenciSoyadi</td>
                <td>@item.OgrenciNo</td>
                <td>@item.sinif.SinifAdi</td>
                <td>
                    <a class="btn btn-danger" asp-controller="Ogrenci" asp-action="Remove" asp-route-id="@item.Id">Sil</a>
                    <a class="btn btn-primary" asp-controller="Ogrenci" asp-action="Update" asp-route-id="@item.Id">Güncelle</a>
                </td>
                
            </tr>
        }
    </tbody>
</table>

